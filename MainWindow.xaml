<Window x:Class="sliderExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sliderExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Image HorizontalAlignment="Left" Height="100" Margin="183,32,0,0" VerticalAlignment="Top" Width="100"/>
        <Image x:Name="imgPicture"
            Height="100"
               Source="https://media.npr.org/assets/img/2018/02/06/img_4590_slide-9c8c6a58227ca7f2f376faf52bc59ef6f79dca23-s1100-c15.jpg"
               />
        <Label x:Name="lblOutput" Content="My content goes here"></Label>
        <Slider x:Name="sliderPick"
                ValueChanged="sliderPick_ValueChanged"
                Minimum="0"
                Maximum="5"
                TickFrequency="1"
                IsSnapToTickEnabled="True"
                />

    </StackPanel>
</Window>
